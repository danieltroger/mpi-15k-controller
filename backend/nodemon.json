{
  "execMap": {
    "ts": "NODE_OPTIONS=--max_old_space_size=3072 node --loader @swc-node/register/esm"
  },
  "restartable": "rs",
  "delay": 2000,
  "watch": ["src"],
  "ext": "ts,tsx",
  "ignore": ["config.json"],
  "events": {
    "crash": "echo 'App crashed. Restarting in 2 seconds...' && sleep 2 && nodemon src/index.ts"
  }
}
